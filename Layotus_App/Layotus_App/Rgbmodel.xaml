<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Layotus_App.Rgbmodel"
             Title="RGB Color Sliders">
    <ContentPage.Content>
        <StackLayout Margin="10">
            <BoxView x:Name="boxView"
                   BackgroundColor="White"
                   VerticalOptions="FillAndExpand"
                   Margin="10"></BoxView>
            <Slider x:Name="redSlider" Minimum="0" Maximum="255" Value="15"
                        ValueChanged="REDSlider_ValueChanged_1"  VerticalOptions="Center"/>
            <Label x:Name="redLabel"
                       VerticalOptions="Center"/>
            <Slider x:Name="greenSlider" Minimum="0" Maximum="255" Value="15"
                        ValueChanged="REDSlider_ValueChanged_1"  VerticalOptions="Center"/>
            <Label x:Name="greenLabel" 
                       VerticalOptions="Center"/>
            <Slider x:Name="blueSlider" Minimum="0" Maximum="255" Value="15"
                        ValueChanged="REDSlider_ValueChanged_1"  VerticalOptions="Center" />
            <Label x:Name="blueLabel" 
                       VerticalOptions="Center"/>
            <Button x:Name="Btn"
                    Text="random"
                    Clicked="RandomBtn_Clicked"
                    HorizontalOptions="FillAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>